<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg2"
    tools:context=".Page2">

    <TextView
        android:id="@+id/page2text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="In the bustling town of Culinary Haven, there lived a passionate and ambitious chef named Name. Known for his innovative dishes and insatiable curiosity, Adian dreamt of exploring the culinary world beyond the familiar flavors of his hometown."
        android:textSize="20sp"
        android:background="@drawable/rounded_background"
        android:fontFamily="sans-serif-condensed"
        android:textStyle="normal|bold"
        android:textColor="#1930C5"
        android:padding="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="start"
            android:background="@drawable/blue_baseline_arrow_circle_left_24"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="normal|bold"
            android:padding="10dp"
            android:onClick="goToMain"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:layout_gravity="end"
            android:background="@drawable/blue_baseline_arrow_circle_right_24"
            android:fontFamily="sans-serif-condensed"
            android:textStyle="normal|bold"
            android:backgroundTint="#25FFFF"
            android:textColor="#002AA5"
            android:padding="10dp"
            android:onClick="goToPage3"/>
    </LinearLayout>
</RelativeLayout>
